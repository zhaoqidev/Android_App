<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cc.upedu.online"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:orientation="horizontal" >

    <!-- 全部好友列表条目 -->

    <cc.upedu.online.view.CircleImageView
        android:id="@+id/teacher_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:src="@drawable/left_menu_head"
        app:border_color="@color/border_color"
        app:border_width="2dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="22dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="陈老师"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!--
                 <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text="城市："
                android:textColor="@color/text_color_six"
                android:textSize="12sp" />
            -->

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:singleLine="true"
                android:text="天津"
                android:textColor="@color/text_color_six"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
   			android:baselineAligned="false"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="公司:"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:singleLine="true"
                    android:text="中和黄埔"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:visibility="gone" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginLeft="3dp"
                    android:singleLine="true"
                    android:text="职位 :"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:singleLine="true"
                    android:text="总裁"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal"
            android:visibility="gone"
             >

            <ImageView
                android:id="@+id/iv_private_letter"
                android:layout_width="47dp"
                android:layout_height="18dp"
                android:src="@drawable/send_message" />

             <ImageView
                 android:id="@+id/iv_stop_tweet"
                android:layout_width="54dp"
                android:layout_height="18dp" 
                android:layout_marginLeft="5dp"
                android:src="@drawable/cancal_attention" />
              <ImageView
                  android:id="@+id/iv_foucuse"
                android:layout_width="47dp"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp" 
                android:src="@drawable/eacher_other" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_attention"
        android:layout_width="46dp"
        android:layout_height="30dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/attention"
        android:clickable="true"
        android:visibility="visible" />

</LinearLayout>