<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >
	<View
         android:layout_width="fill_parent"
         android:layout_height="5dp"
         android:background="@color/transparent" />
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content" >
		<TextView
		    android:id="@+id/tv_left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:padding="7dp"
	        android:text="取消"
	        android:textColor="@color/course_doc"
	        android:textSize="14sp" />
         <TextView
            android:id="@+id/tv_right"
         	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
			android:padding="7dp"
	        android:text="确定"
	        android:textColor="@color/course_doc"
	        android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_left"
            android:layout_toLeftOf="@id/tv_right"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
	        android:textColor="@color/course_title"
            android:text="学友筛选"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_dadada" />
	<FrameLayout
	    android:layout_width="match_parent"
	    android:layout_height="39dp"
	    android:paddingLeft="7dp"
	    android:paddingTop="5dp"
	    android:paddingRight="7dp"
	    android:paddingBottom="5dp" >
	    <ImageView
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:src="@drawable/bg_coursenote_context"
	        android:scaleType="fitXY" />
	    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:gravity="center_vertical"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="3dp"
	        android:orientation="horizontal" >
	        <ImageView
	            android:id="@+id/iv_search"
		        android:layout_width="16dp"
		        android:layout_height="16dp"
		        android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
		        android:src="@drawable/search_schoolmate"
		        android:scaleType="fitXY" />
	        <EditText
            android:id="@+id/et_search"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@color/transparent"
	            android:layout_toLeftOf="@id/iv_search"
	            android:layout_centerVertical="true"
	            android:singleLine="true"
		        android:textColor="@color/course_title"
	            android:hint="筛选条件"
	            android:textColorHint="@color/course_doc"
	            android:textSize="13sp" />
	    </RelativeLayout>
	</FrameLayout>
	<View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />
	<View
         android:layout_width="fill_parent"
         android:layout_height="7dp"
         android:background="@color/backGrond" />
	<View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />

	<TextView
	    android:id="@+id/tv_all"
         android:layout_width="match_parent"
         android:layout_height="33dp"
         android:paddingLeft="7dp"
         android:paddingRight="7dp"
         android:gravity="center_vertical"
         android:singleLine="true"
         android:text="全部学友"
         android:textColor="@color/red_fb5252"
         android:textSize="14sp" />
     <View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />
	<TextView
	    android:id="@+id/tv_city"
         android:layout_width="match_parent"
         android:layout_height="33dp"
         android:paddingLeft="7dp"
         android:paddingRight="7dp"
         android:gravity="center_vertical"
         android:singleLine="true"
         android:text="同城学友"
         android:textColor="@color/course_title"
         android:textSize="14sp" />
     <View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />
     <LinearLayout
         android:id="@+id/ll_industry"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="horizontal" >
		<TextView
		    android:id="@+id/tv_industry"
	         android:layout_width="wrap_content"
	         android:layout_height="33dp"
	         android:paddingLeft="7dp"
	         android:paddingRight="7dp"
	         android:gravity="center_vertical"
	         android:singleLine="true"
	         android:text="同行学友"
	         android:textColor="@color/course_title"
	         android:textSize="14sp" />
         <TextView
		    android:id="@+id/name_industry"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:paddingLeft="7dp"
	         android:paddingRight="7dp"
	         android:gravity="right"
	         android:singleLine="true"
	         android:text=""
	         android:textColor="@color/course_title"
	         android:textSize="14sp" />
     </LinearLayout>
     <View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />
	<TextView
	    android:id="@+id/tv_man"
         android:layout_width="match_parent"
         android:layout_height="33dp"
         android:paddingLeft="7dp"
         android:paddingRight="7dp"
         android:gravity="center_vertical"
         android:singleLine="true"
         android:text="男学友"
         android:textColor="@color/course_title"
         android:textSize="14sp" />
     <View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />
	<TextView
	    android:id="@+id/tv_woman"
         android:layout_width="match_parent"
         android:layout_height="33dp"
         android:paddingLeft="7dp"
         android:paddingRight="7dp"
         android:gravity="center_vertical"
         android:singleLine="true"
         android:text="女学友"
         android:textColor="@color/course_title"
         android:textSize="14sp" />
     <View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />
     <LinearLayout
         android:id="@+id/ll_othercity"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:gravity="center_vertical"
         android:orientation="horizontal" >
		<TextView
		    android:id="@+id/tv_othercity"
	         android:layout_width="wrap_content"
	         android:layout_height="33dp"
	         android:paddingLeft="7dp"
	         android:paddingRight="7dp"
	         android:gravity="center_vertical"
	         android:singleLine="true"
	         android:text="其他城市"
	         android:textColor="@color/course_title"
	         android:textSize="14sp" />
         <TextView
		    android:id="@+id/name_othercity"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:paddingLeft="7dp"
	         android:paddingRight="7dp"
	         android:gravity="right"
	         android:singleLine="true"
	         android:text=""
	         android:textColor="@color/course_title"
	         android:textSize="14sp" />
     </LinearLayout>
     <View
         android:layout_width="fill_parent"
         android:layout_height="0.5dp"
         android:background="@color/line_dadada" />

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:padding="12dp"
         android:background="@color/backGrond" >
         <TextView
             android:id="@+id/tv_clear"
             android:layout_width="96dp"
             android:layout_height="wrap_content"
             android:background="@drawable/bg_coursenote_context"
             android:layout_centerHorizontal="true"
             android:gravity="center"
             android:text="清除筛选"
             android:textColor="@color/course_doc"
             android:textSize="14dp" />
     </RelativeLayout>
</LinearLayout>