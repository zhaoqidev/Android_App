<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dip"
    android:background="@drawable/selector_item"
    >

    <LinearLayout
        android:layout_marginTop="5dip"
        android:id="@+id/layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/systemimage_item"
            android:layout_width="100dip"
            android:layout_height="80dip"
            android:src="@drawable/left_menu_head" />
      </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dip"
            android:layout_toRightOf="@id/layout_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_centerVertical="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/system_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:singleLine="true"
                android:text="重庆某企业经理"
                android:textColor="@color/color_itemname"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/system_item_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="数学经济学详细解答数学经济学详细解答数学经济学详细解答数学经济学详细解答"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@color/color_textcolor"
                android:textSize="12sp" />
            

        </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_xiahuaxian" />

</RelativeLayout>
