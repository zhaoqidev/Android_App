<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cc.upedu.online"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/selector_item"
    android:padding="10dip"
    android:orientation="horizontal" >
    
    <cc.upedu.online.view.CircleImageView
        android:id="@+id/inspiration_image_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:border_color="@color/border_color"
        app:border_width="2dp"
        android:src="@drawable/left_menu_head" />
    
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="5dp"
	    android:layout_marginTop="8dp"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal" >
	        
	        <TextView
		        android:id="@+id/inspiration_name"
		        android:layout_width="0dp"
		        android:layout_weight="1"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:layout_marginLeft="5dp"
		        android:text="名称"
		        android:textColor="@color/color_itemname"
		        android:textSize="14sp" />
	        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            	android:layout_marginRight="10dp"
            	android:layout_gravity="bottom"
                android:orientation="horizontal" >
                <!-- <ImageView
                android:layout_width="15dip"
                android:layout_height="15dip"
                android:layout_marginRight="3dp"
                android:src="@drawable/aihao_zidingyi" /> -->
	            <TextView 
	            	android:id="@+id/inspiration_time"
	                android:layout_width="wrap_content"
	            	android:layout_height="wrap_content"
	            	android:layout_gravity="bottom"
	            	android:textSize="12sp"
	            	android:text="昨天 12:25"/>
            </LinearLayout>
	    </LinearLayout>
	
		<TextView
		    android:id="@+id/inspiration_doc"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="5dp"
		    android:layout_marginTop="3dp"
		    android:text="课程感悟内容"
		    android:textColor="@color/color_textcolor"
		    android:textSize="12sp" />
	</LinearLayout>
</LinearLayout>