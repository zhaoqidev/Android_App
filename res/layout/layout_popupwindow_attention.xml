<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:background="@drawable/kfk"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_foucuse"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="28dp"
        android:layout_height="28dp" 
        android:background="@drawable/foucuse"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/iv_stop_tweet"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="28dp"
        android:layout_height="28dp" 
        android:background="@drawable/stop_tweet"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/iv_private_letter"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:layout_width="28dp"
        android:layout_height="28dp" 
        android:background="@drawable/private_letter"
        android:clickable="true"
        />

</LinearLayout>