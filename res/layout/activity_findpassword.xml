<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:orientation="vertical" >

             <View
                 android:layout_width="fill_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/xiahuaxian" />

             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="45dp"
                 android:background="@color/white"
                 android:orientation="horizontal" >

                 <ImageView
                     android:layout_width="25dp"
                     android:layout_height="25dp"
                     android:layout_gravity="center"
                     android:layout_marginLeft="30dip"
                     android:layout_marginRight="6dip"
                     android:background="@drawable/phonenumber" />

                 <EditText
                     android:id="@+id/et_find_number"
                     android:layout_width="fill_parent"
                     android:layout_height="40dip"
                     android:layout_gravity="center_vertical"
                     android:layout_marginLeft="10dp"
                     android:background="@drawable/shape"
                     android:hint="@string/name_inputusername"
                     android:singleLine="true"
                     android:textColor="@color/dark_grey"
                     android:inputType="number"
                     android:textColorHint="@color/color_textcolor"
                     android:textSize="15sp"
                     android:maxLength="11" />
             </LinearLayout>

             <LinearLayout
                 android:layout_width="fill_parent"
                 android:layout_height="wrap_content"
                 android:background="@color/white"
                 android:orientation="horizontal" >

                 <View
                     android:layout_width="fill_parent"
                     android:layout_height="0.5dp"
                     android:layout_marginLeft="60dp"
                     android:background="@color/xiahuaxian" />
             </LinearLayout>

             <RelativeLayout
                 android:layout_width="fill_parent"
                 android:layout_height="45dp"
                 android:background="@color/white" >

                 <ImageView
                     android:id="@+id/iv_one"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="30dip"
                     android:layout_marginRight="6dip"
                     android:layout_centerVertical="true"
                     android:background="@drawable/yanzhengma" />

                 <EditText
                     android:id="@+id/et_findpwd_authcode"
                     android:layout_width="match_parent"
                     android:layout_height="39dp"
                     android:layout_marginLeft="10dp"
                     android:layout_centerVertical="true"
                     android:background="@drawable/shape"
                     android:layout_toRightOf="@+id/iv_one"
                     android:layout_toLeftOf="@+id/btn_findpwd_code"
                     android:ems="4"
                     android:hint="@string/verification_code"
                     android:singleLine="true"
                     android:textColor="@color/dark_grey"
                     android:textColorHint="@color/color_textcolor"
                     android:textSize="15sp" />

                 <Button
                     android:id="@+id/btn_findpwd_code"
                     android:layout_width="90dp"
                     android:layout_height="32dp"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="5dp"
                     android:layout_alignParentRight="true"
                     android:background="@drawable/authcode"
                     android:text="@string/verificationcode_get"
                     android:textColor="@color/white"
                     android:textSize="13sp" />
             </RelativeLayout>

             <View
                 android:layout_width="fill_parent"
                 android:layout_height="0.5dp"
                 android:background="@color/color_xiahuaxian" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="50dip"
                 android:orientation="vertical"
                 android:padding="10dip" >

                 <Button
                     android:id="@+id/btn_findpassword"
                     android:layout_width="match_parent"
                     android:layout_height="40dp"
                     android:background="@drawable/img_login"
                     android:text="@string/confirm"
                     android:textColor="@color/white"
                     android:textSize="18sp" />
             </LinearLayout>
         </LinearLayout>
    </ScrollView>