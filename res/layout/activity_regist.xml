<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dip"
            android:background="@color/color_xiahuaxian" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/username" />

                <EditText
                    android:id="@+id/et_regist_name"
                    android:layout_width="match_parent"
                    android:layout_height="45dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape"
                    android:hint="@string/name_registername_hint"
                    android:maxLength="4"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/color_textcolor"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_xiahuaxian" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/phonenumber" />

                <EditText
                    android:id="@+id/et_regist_number"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape"
                    android:hint="@string/name_inputusername"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/color_textcolor"
                    android:textSize="15sp"
                    android:maxLength="11" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_xiahuaxian" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/iv_one"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/yanzhengma" />

                <EditText
                    android:id="@+id/et_regist_authcode"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toLeftOf="@+id/btn_authcode"
                    android:layout_toRightOf="@+id/iv_one"
                    android:background="@drawable/shape"
                    android:ems="4"
                    android:hint="@string/verification_code"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/color_textcolor"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/btn_authcode"
                    android:layout_width="90dp"
                    android:layout_height="32dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/authcode"
                    android:text="@string/verificationcode_get"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_xiahuaxian" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/mima" />

                <EditText
                    android:id="@+id/et_pwd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape"
                    android:digits="@string/register_name_digits"
                    android:hint="@string/name_password"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/color_textcolor"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_xiahuaxian" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dip"
                android:background="@color/white"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dip"
                    android:layout_marginRight="6dip"
                    android:background="@drawable/password" />

                <EditText
                    android:id="@+id/et_regist_confirmpwd"
                    android:layout_width="fill_parent"
                    android:layout_height="45dip"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/shape"
                    android:digits="@string/register_name_digits"
                    android:ems="10"
                    android:hint="@string/name_confrimpwd"
                    android:inputType="textPassword"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="@color/dark_grey"
                    android:textColorHint="@color/color_textcolor"
                    android:textSize="15sp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/color_xiahuaxian" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:orientation="horizontal"
            android:padding="10dip" >

            <CheckBox
                android:id="@+id/cb_agree"
                style="@style/main_tab_bottoms"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/my_chock_box"
                android:checked="true"
                android:gravity="center" />

            <TextView
                android:id="@+id/tv_tongyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/name_agree"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_law"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:text="@string/name_czbagreement"
                android:textColor="@color/titlered"
                android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="20dip"
            android:layout_marginTop="10dip"
            android:orientation="vertical"
            android:padding="10dip" >

            <Button
                android:id="@+id/btn_regist"
                android:layout_width="fill_parent"
                android:layout_height="40dip"
                android:background="@drawable/img_login"
                android:text="@string/name_regist"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>