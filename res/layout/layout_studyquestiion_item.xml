<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cc.upedu.online"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:padding="10dip"
    android:orientation="horizontal" >
<!-- 导师主界面的导师条目 -->
	<cc.upedu.online.view.CircleImageView
        android:id="@+id/inspiration_image_item"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:border_color="@color/border_color"
        app:border_width="2dp"
        android:src="@drawable/left_menu_head" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dip"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >
            
            <TextView
            android:id="@+id/inspiration_name"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="名称"
            android:textColor="@color/color_itemname"
            android:textSize="14sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="16dip"
                android:layout_marginRight="7dp"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >
            </LinearLayout>

            <ImageView
                android:layout_width="14dip"
                android:layout_height="14dip"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="5dp"
                android:layout_toLeftOf="@+id/inspiration_time"
                android:src="@drawable/course_liuyan" />

            <TextView
                android:id="@+id/inspiration_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="7dp"
                android:text="昨天 12:25"
                android:textColor="@color/color_textcolor"
                android:textSize="12sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/inspiration_doc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="问题内容"
            android:textColor="@color/color_textcolor"
            android:textSize="13sp" />
        
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="@color/color_xiahuaxian" />

</LinearLayout>