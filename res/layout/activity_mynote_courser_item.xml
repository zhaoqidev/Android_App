<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/selector_item" >
<!-- 全部课程，条目的布局 -->
    <ImageView
        android:id="@+id/courseimage_item"
        android:layout_width="108dp"
        android:layout_height="81dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_course" />
    
    <TextView
        android:id="@+id/tv_note_course"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/name_course"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/courseimage_item"
        android:textColor="@color/course_title"
        android:textSize="14sp" />

    <LinearLayout
        android:id="@+id/ll_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_below="@id/tv_note_course"
	    android:layout_toRightOf="@id/courseimage_item"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/note_time" />

        <TextView
            android:id="@+id/tv_note_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:text="@string/name_time_hint"
            android:textColor="@color/text_color_four"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
	    android:layout_below="@id/ll_time"
	    android:layout_toRightOf="@id/courseimage_item"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/note_theacher" />

        <TextView
            android:id="@+id/tv_note_theacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:singleLine="true"
            android:text="@string/name_teacher"
            android:textColor="@color/text_color_four"
            android:textSize="12sp" />
	</LinearLayout>
</RelativeLayout>
