<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/iv_photo_lpsi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <CheckBox
        android:id="@+id/cb_photo_lpsi"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/my_chockbox_note"
        android:button="@null" />
	<ImageView
        android:id="@+id/delete_photo_btn"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:padding="3dp"
        android:background="@color/transparent"
        android:src="@drawable/close_nor" />
	<TextView 
	    android:id="@+id/tv_camera_vc"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/gray"
	    android:clickable="true"
	    android:drawablePadding="0dp"
	    android:visibility="gone"
	    android:drawableTop="@drawable/ic_camera_normal"
	    android:gravity="center"
	    android:orientation="vertical"
	    android:paddingTop="20dp"
	    android:text="拍摄照片"
	    android:textColor="@android:color/white" />
    
</RelativeLayout>