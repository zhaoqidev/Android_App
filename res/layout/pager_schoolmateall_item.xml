<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cc.upedu.online"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item" >

    <!-- 全部好友列表条目 -->

    <cc.upedu.online.view.CircleImageView
        android:id="@+id/teacher_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        app:border_color="@color/border_color"
        app:border_width="2dp"
        android:src="@drawable/left_menu_head" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/teacherNameLayout"
            android:layout_marginTop="15dp"
            android:layout_toLeftOf="@+id/ll_one"
                 android:layout_toRightOf="@+id/teacher_image"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/teacher_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.38"
                android:singleLine="true"
                android:text="陈老师"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <!-- <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1.3"
                android:singleLine="true"
                android:text="所在城市："
                android:textColor="@color/text_color_six"
                android:textSize="12sp" /> -->

            <TextView
                android:id="@+id/tv_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/text_color_six"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:baselineAligned="false"
                 android:layout_toLeftOf="@+id/ll_one"
            android:layout_below="@+id/teacherNameLayout"
                 android:layout_toRightOf="@+id/teacher_image"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.96"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="公司:"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_company"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:text="中和黄埔中和黄埔"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_gravity="left"
                    android:text="职位 :"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:gravity="left"
                    android:text="总裁"
                    android:textColor="@color/text_color_six"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

    <LinearLayout 
        android:id="@+id/ll_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        >

    <TextView
        android:id="@+id/tv_attention"
        android:layout_width="55dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/attention_add"
        android:gravity="center"
        android:text=""
        android:textColor="@color/text_color_six"
        android:clickable="true"
        android:textSize="12sp" />
</LinearLayout>
</RelativeLayout>