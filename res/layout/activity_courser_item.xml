<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/selector_item"
    >
<!-- 全部课程，条目的布局 -->
    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/courseimage_item"
            android:layout_width="108dp"
            android:layout_height="81dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_course" />
    </LinearLayout>
    
    <TextView
             android:id="@+id/course_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:singleLine="true"
             android:text="@string/name_course"
             android:layout_marginTop="3dp"
             android:layout_marginLeft="8dp"
             android:layout_toRightOf="@id/layout_one"
             android:textColor="@color/course_title"
             android:textSize="14sp" />
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="3dp"
		    android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/layout_one"
            android:layout_alignBottom="@id/layout_one"
	    	android:baselineAligned="false"
		    android:orientation="horizontal" >
			<!-- <TextView
			    android:id="@+id/apply_text"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="@string/title_applycount"
			    android:textColor="@color/course_doc"
			    android:textSize="12sp" />
			<TextView
				android:id="@+id/apply_count"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
				android:text="@string/count_apply"
				android:textColor="@color/course_doc"
				android:textSize="12sp" /> -->
        	<LinearLayout
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="2"
	            android:gravity="bottom"
        	    android:orientation="horizontal" >
			    <ImageView
			        android:layout_width="15dp"
			        android:layout_height="15dp"
			        android:scaleType="fitXY"
			        android:src="@drawable/courseitem_daoshi" />
	            <TextView
	                android:id="@+id/theacher_Name"
	                android:layout_width="wrap_content"
	                android:layout_height="wrap_content"
	                android:layout_marginLeft="3dp"
	                android:singleLine="true"
	                android:text="@string/name_teacher"
	                android:textColor="@color/color_textcolor"
	                android:textSize="12sp" />
            </LinearLayout>
            <LinearLayout
        	    android:layout_width="0dp"
        	    android:layout_height="wrap_content"
        	    android:layout_weight="3"
	            android:gravity="bottom"
        	    android:orientation="horizontal" >
	            <ImageView
			        android:layout_width="15dp"
			        android:layout_height="15dp"
			        android:scaleType="fitXY"
			        android:src="@drawable/courseitem_liulan" />
				<TextView
				    android:id="@+id/apply_count"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
	                android:layout_marginLeft="3dp"
				    android:text="报名人数"
				    android:singleLine="true"
				    android:textColor="@color/color_textcolor"
				    android:textSize="12sp" />
			</LinearLayout>
		</LinearLayout>

</RelativeLayout>
