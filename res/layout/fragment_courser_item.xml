<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/selector_item"
    >
<!-- 全部课程，条目的布局 -->
    <LinearLayout
        android:id="@+id/layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/courseimage_item"
            android:layout_width="108dp"
            android:layout_height="81dp"
            android:scaleType="fitXY"
            android:src="@drawable/img_course" />
    </LinearLayout>

     <LinearLayout
         android:layout_toRightOf="@id/layout_one"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="10dip"
         android:orientation="vertical" >

         <TextView
             android:id="@+id/course_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:singleLine="true"
             android:text="课程名称"
             android:textColor="@color/course_title"
             android:textSize="14sp" />
		<LinearLayout
             android:layout_marginTop="6dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
             <TextView
                 android:id="@+id/theacher_text"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:text="导    师:"
                 android:textColor="@color/course_doc"
                 android:textSize="12sp" />
             <TextView
                 android:id="@+id/theacher_Name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="5dp"
                 android:singleLine="true"
                 android:text="导师名称"
                 android:textColor="@color/course_doc"
                 android:textSize="12sp" />
         </LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="3dp"
		    android:orientation="horizontal" >
			<TextView
			    android:id="@+id/course_doc"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="描述信息"
			    android:singleLine="true"
			    android:textColor="@color/course_doc"
			    android:textSize="12sp" />
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>
