<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_bar_2"
    android:layout_width="match_parent"
    android:layout_height="44dp"
	android:background="@drawable/titlebar_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal" 
    android:baselineAligned="false">
    
	<LinearLayout
	    android:id="@+id/ll_back"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
		android:paddingLeft="16dp"
		android:paddingRight="16dp"
	    android:clickable="true"
	    android:clipChildren="true"
	    android:orientation="horizontal" >

	    <ImageView
	        android:id="@+id/ib_left"
	        android:layout_width="24dp"
	        android:layout_height="24dp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/back"
	        android:scaleType="fitXY" />

	    <TextView
	        android:id="@+id/tv_back_2"
	        style="@style/style_title_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:contentDescription="@string/name_backimage"
	        android:text="返回"
	        android:visibility="visible" />
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/rl_text_2"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:layout_weight="2"
	    android:clickable="true"
	    android:orientation="horizontal" >
	
	    <TextView
	        android:id="@+id/tv_title_2"
	        style="@style/style_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:text="标题" />
	
	</LinearLayout>
	
	<LinearLayout
	    android:id="@+id/rl_right_2"
	    android:layout_width="0dp"
	    android:layout_height="wrap_content"
	    android:layout_weight="1"
	    android:gravity="right"
	    android:orientation="horizontal" >
	
	    <TextView
	        android:id="@+id/tv_next"
	        style="@style/style_title_back"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical"
	        android:layout_marginRight="20dp"
	        android:visibility="gone"
	        android:clickable="true"
	        android:text="" />
	    
	    <ImageButton
	        android:id="@+id/ibtn_right2"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_gravity="center_vertical"
	        android:background="@android:color/transparent"
	        android:layout_marginRight="16dp"
	        android:scaleType="fitXY"
			android:visibility="gone"
	        android:src="@drawable/share" />

	    <ImageButton
	        android:id="@+id/ibtn_right"
	        android:layout_width="18dp"
	        android:layout_height="18dp"
	        android:layout_gravity="center_vertical"
	        android:background="@android:color/transparent"
	        android:layout_marginRight="16dp"
	        android:scaleType="fitXY"
			android:visibility="gone"
	        android:src="@drawable/share" />
	
	</LinearLayout>
</LinearLayout>