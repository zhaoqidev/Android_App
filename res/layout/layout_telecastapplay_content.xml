<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/backGrond_f3"
	    android:paddingTop="6dp"
	    android:paddingBottom="7dp"
	    android:orientation="horizontal" >
	
	
	    <TextView
	        android:id="@+id/bt_applay"
	        android:layout_width="81dp"
	        android:layout_height="26dp"
	        android:layout_marginRight="10dp"
	        android:layout_alignParentRight="true"
	        android:background="@color/red_fe5d5e"
	        android:gravity="center"
	        android:text="我要参加"
	        android:textColor="@color/white"
	        android:textSize="14sp" />
	</RelativeLayout>
	<View
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:background="@color/xiahuaxian" />


    <TextView
        android:id="@+id/studypage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:text="讲师介绍"
        android:textColor="@color/color_itemname"
        android:textSize="16sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="11dp"
        android:paddingBottom="14dp" >

        <cc.upedu.online.view.CircleImageView
            android:id="@+id/teacher_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/teacher_images" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
		    <TextView
		        android:id="@+id/teacher_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_toRightOf="@+id/praise_count"
		        android:singleLine="true"
		        android:text="陈老师"
		        android:textColor="@color/color_itemname"
		        android:textSize="14sp" />

            <TextView
                android:id="@+id/praise_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/menu_arr_select"
                android:text="12"
                android:textSize="13sp"
                android:visibility="gone" />
        </RelativeLayout>

		<TextView
		    android:id="@+id/teacher_doc"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingTop="6dp"
		    android:maxLines="2"
		    android:text="中和智本首席架构师，中和产品及产品的首席规划师，中华新商帮文化联盟操盘手，中和智本品牌课程导师"
		    android:textColor="@color/text_color_three"
		    android:textSize="13sp"
		    android:visibility="gone" />

		<TextView
		    android:id="@+id/teacher_work"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="6dp"
		    android:singleLine="true"
		    android:text="首席架构师"
		    android:textColor="@color/text_color_three"
		    android:textSize="13sp" />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:orientation="vertical" >
	<View
	    android:layout_width="match_parent"
	    android:layout_height="10dp"
	    android:background="@color/backGrond_f3" />
	<TextView
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="10dp"
	    android:layout_marginTop="12dp"
	    android:text="视频介绍"
	    android:textColor="@color/color_itemname"
	    android:textSize="16sp" />
	</LinearLayout>

    <WebView
        android:id="@+id/wv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:padding="16dp" />
</LinearLayout>
