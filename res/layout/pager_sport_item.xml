<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/cc.upedu.online"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backGrond"
    android:orientation="vertical" >

    <!-- 活动条目 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="7dp"
        android:layout_marginRight="6dp"
        android:layout_marginBottom="5dp"
  		android:background="@drawable/selector_item"
        android:orientation="horizontal" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/note_user_image"
                android:layout_width="match_parent"
                android:layout_height="172dp"
                android:scaleType="fitXY"
                android:src="@drawable/img_sportlist" />
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="9dp"
				android:paddingRight="9dp"
				android:layout_alignBottom="@+id/note_user_image"
				android:gravity="center_vertical"
				android:orientation="vertical" >
	             <TextView
	                 android:id="@+id/note_user_name"
	                 android:layout_width="fill_parent"
	                 android:layout_height="wrap_content"
	                 android:maxLines="2"
	                 android:ellipsize="end"
	                 android:text="互联网众筹总裁班"
	                 android:textColor="@color/white"
	                 android:textSize="15sp" />
	             <View
	                 android:layout_width="match_parent"
	                 android:layout_height="0.5dp"
	                 android:layout_marginTop="7dp"
	                 android:background="@color/white_4c" />
				<TextView
	                 android:id="@+id/note_content"
	                 android:layout_width="wrap_content"
	                 android:layout_height="wrap_content"
	                 android:drawableLeft="@drawable/sportlist_itemadress"
	                 android:paddingTop="5dp"
	                 android:paddingBottom="5dp"
	                 android:ellipsize="end"
	                 android:gravity="center_vertical"
	                 android:maxLines="1"
	                 android:singleLine="false"
	                 android:text="北京市朝阳区嘉泰国际大厦1927室"
	                 android:textColor="@color/white"
	                 android:textSize="13sp" />
			</LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="22dp"
                android:layout_alignLeft="@+id/note_user_image"
                android:layout_alignTop="@+id/note_user_image"
                android:layout_marginTop="8dp"
                android:background="@drawable/sport_baoming"
                android:gravity="left|center_vertical"
                android:orientation="horizontal" >

                <!-- <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/sport_icon" /> -->

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:text="已报名："
                    android:textColor="@color/white"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="50人"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
            
    		<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/note_user_image"
                android:layout_marginLeft="9dip"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:baselineAligned="false" >
				
				<cc.upedu.online.view.CircleImageView 
			        android:id="@+id/civ_img"
				    android:layout_width="60sp"
		        	android:layout_height="60sp"
			        app:border_color="@color/border_color"
			        app:border_width="1dp"
		        	android:src="@drawable/teacher_images"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/civ_img"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textColor="@color/text_color_one"
                        android:textSize="12sp" />
                    <TextView
	                    android:id="@+id/note_time"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:gravity="center_vertical"
	                    android:singleLine="true"
	                    android:text="2015-04-23 12:25"
	                    android:textColor="@color/text_color_one"
	                    android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>