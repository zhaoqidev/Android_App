<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_item"
    android:orientation="vertical" >
    <RelativeLayout
        android:layout_width="match_parent"
	    android:layout_height="70dp"
	    android:padding="10dip" >
	    <TextView
	        android:id="@+id/notice_time"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:gravity="right"
	        android:singleLine="true"
	        android:layout_marginRight="10dp"
	        android:layout_alignParentBottom="true"
	        android:text="@string/name_time_hint"
	        android:textColor="@color/color_textcolor"
	        android:textSize="12sp" />
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_above="@+id/notice_time"
	        android:layout_alignParentTop="true"
	        android:orientation="horizontal" >
	        <ImageView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="1dp"
	            android:src="@drawable/icon_noticeitemname" />
		    <TextView
		        android:id="@+id/notice_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="@string/name_notice"
		        android:layout_marginLeft="5dp"
		        android:textColor="@color/color_itemname"
		        android:textSize="13sp" />
	    </LinearLayout>
    </RelativeLayout>
</LinearLayout>
