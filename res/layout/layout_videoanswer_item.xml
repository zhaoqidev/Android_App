<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backGrond_f3"
    android:orientation="vertical" >
	<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian" />
	<LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
    	android:background="@drawable/selector_item"
	    android:paddingLeft="11dp"
	    android:paddingRight="11dp"
	    android:orientation="vertical" >
	    <LinearLayout
	        android:id="@+id/linearLayout1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="10dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	
	        <ImageView
	            android:id="@+id/iv_doc"
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:scaleType="fitXY"
	            android:src="@drawable/icon_shipin" />
	
	        <TextView
	            android:id="@+id/tv_title"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="7dp"
	            android:text="视频答疑1"
	            android:textColor="@color/user_show_2b2b2b"
	            android:textSize="15sp" />
	
	    </LinearLayout>
	    <TextView
	        android:id="@+id/tv_createTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="22dp"
	        android:layout_marginTop="7dp"
	        android:layout_marginBottom="9dp"
	        android:text="今天12:25"
	        android:textColor="@color/color_textcolor"
	        android:textSize="12sp" />
		<View 
	        android:layout_height="0.5dp"
	        android:layout_width="match_parent"
	        android:layout_marginLeft="22dp"
	        android:background="@color/xiahuaxian"/>
		<RelativeLayout
	        android:id="@+id/layout_two"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="13dip"
	        android:layout_marginBottom="14dip"
	        android:gravity="center_vertical"
	        android:orientation="horizontal" >
	        <ImageView
	            android:id="@+id/iv_one"
	            android:layout_width="16dp"
	            android:layout_height="16dp"
	            android:layout_marginTop="2dp"
	            android:src="@drawable/icon_question" />
	
	        <TextView
	        	android:id="@+id/tv_content"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_toRightOf="@id/iv_one"
				android:text="解决了那些问题解决了"
				android:layout_marginLeft="7dp"
		        android:textColor="@color/text_color_one"
		        android:textSize="13sp" />
	    </RelativeLayout>
	</LinearLayout>
	<View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/xiahuaxian" />
</LinearLayout>